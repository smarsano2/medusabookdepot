<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@/materialDesign.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medusabookdepot.view.BooksControl">
	<content>
		<VBox styleClass="card">
			<children>
				<HBox>
					<children>
						<Label styleClass="card-title" text="Add Book" />
                   		<Pane prefWidth="200.0" HBox.hgrow="ALWAYS" />                     
                        <Button mnemonicParsing="false" styleClass="button-flat" text="DELETE" fx:id="delete" onAction="#delete"/>
					</children>
				</HBox>
				<HBox VBox.vgrow="ALWAYS">
					<children>
						<VBox prefWidth="300.0" minWidth="200.0" fx:id="vBoxFields">
							<children> 
					        	<Label styleClass="control-label" text="ISBN" />
				                <TextField prefHeight="43.0" prefWidth="300.0" fx:id="isbnField"/>
				                <Label styleClass="control-label" text="Title" />
				                <TextField prefHeight="42.0" prefWidth="300.0" fx:id="titleField"/>
					            <Label styleClass="control-label" text="Year" />
								<TextField prefHeight="42.0" prefWidth="300.0" fx:id="yearField"/>
								<Label styleClass="control-label" text="Pages" />
				                <TextField prefHeight="42.0" prefWidth="300.0" fx:id="pagesField"/>
				                <Label styleClass="control-label" text="Serie" />
				                <TextField prefHeight="42.0" prefWidth="300.0" fx:id="serieField"/>
				                <Label styleClass="control-label" text="Genre" />
				                <TextField prefHeight="42.0" prefWidth="300.0" fx:id="genreField"/>
				                <Label styleClass="control-label" text="Author" />
				                <TextField prefHeight="42.0" prefWidth="300.0" fx:id="authorField"/>
				                <Label styleClass="control-label" text="Price" />
				                <TextField prefHeight="42.0" prefWidth="300.0" fx:id="priceField"/>
                           		<Pane prefHeight="20.0" />
                           		<HBox>
	                           		<children>
	                           			<Pane prefWidth="200.0" HBox.hgrow="ALWAYS" />
								        <Button defaultButton="true" mnemonicParsing="false" text="ADD" HBox.hgrow="ALWAYS" onAction="#add"/>
									</children> 
						   		</HBox>
							</children>
		                    <padding>
		                        <Insets right="20.0" />
		                    </padding> 
						</VBox>
						<VBox HBox.hgrow="ALWAYS">
							<children>
								<TableView editable="true" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS" fx:id="stdBooksTable" >
		                        	<columns>
			                          	<TableColumn text="ISBN" fx:id="isbnColumn" />
			                          	<TableColumn text="Title" fx:id="titleColumn" />
			                            <TableColumn text="Year" fx:id="yearColumn" />
			                            <TableColumn text="Pages" fx:id="pagesColumn" />
			                            <TableColumn text="Serie" fx:id="serieColumn" />
			                          	<TableColumn text="Genre" fx:id="genreColumn" />
			           					<TableColumn text="Author" fx:id="authorColumn" />
										<TableColumn text="Price" fx:id="priceColumn" />
									</columns>
									<columnResizePolicy>
										<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			                    	</columnResizePolicy>
		                        </TableView>
							</children>
						</VBox>
					</children>
				</HBox>  
				<HBox>
	            	<children>
	            		<Pane prefWidth="300.0" HBox.hgrow="ALWAYS" />   
	            		<TextField promptText="Search" fx:id="searchField" />
	            		<Label styleClass="icon-label" text="ï‡ƒ" />
	            	</children>
                </HBox>
	        </children>	
		</VBox>					
	</content>
	<padding>
		<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
	</padding>
</ScrollPane>
